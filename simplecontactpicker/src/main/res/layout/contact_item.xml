<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contactItem"
    style="@style/Contact">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/contactImage"
            style="@style/Contact.Avatar"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageView
            android:id="@+id/contactSelected"
            style="@style/Contact.Indicator"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/separator_margin"
        tools:ignore="RtlHardcoded,RtlSymmetry">

        <TextView
            android:id="@+id/contactName"
            style="@style/Contact.Name"
            tools:text="Juan PÃ©rez"/>

        <TextView
            android:id="@+id/contactNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBaseText"
            tools:text="+52(664) 154 7845"/>

        <TextView
            android:id="@+id/contactNumberType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBaseText"
            tools:text="Celular"/>
    </LinearLayout>

</LinearLayout>